{
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "files.associations": {
    "*.json5": "jsonc",
  },
  "[json][jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.indentSize": "tabSize",
  },
  "[rust]": {
    "editor.tabSize": 4,
  },
  "rust-analyzer.cargo.features": "all",
  "rust-analyzer.check.command": "clippy",
  "nix.serverPath": "nil",
  "nix.enableLanguageServer": true,
  "nix.serverSettings": {
    "nil": {
      "formatting": {
        "command": [
          "nixpkgs-fmt"
        ]
      }
    }
  },
}
